<%= render 'shared/errors', obj: @usuario %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@usuario, :html => { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :nome %>  
        </div>
        <div class="col-sm-8">
          <%= f.text_field :nome, class: "form-control", placeholder: "Nome", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.submit(@usuario.new_record? ? "Inserir" : "Atualizar", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
    <% end %>

  </div>
</div>
