<div class="container">
  <h1>Cadastro de Pets</h1> 
  <br />
  <br />
  
  <div class="row">
    <h4>Filtrar</h4>
    <strong>Família: </strong>
    <select id="select-animal-painel" class="selectpicker" style="width: 150px">
      <option value="-1">Todos</option>
      <option value="1">Cães</option>
      <option value="2">Gatos</option>
      <option value="3">Aves</option>
      <option value="4">Outros</option>
    </select>
  
    <strong>Raça:</strong>
    <input type="text" class="pesquisa-painel" placeholder="Insira a raça a ser pesquisada" style="width: 300px">  
  </div>

  <br />

  <div id="pet-exhibition">
    <% @pets.each do |pet| %>  
      <div class="row">
    
        <div class="well col-sm-5">
          
          <div class="col-sm-6">
            <div class="col-sm-12">
              <h3><%= link_to pet.raca, pet_path(pet) %> </h3>
            </div>
            <div class="col-sm-8">
              <img class="img-responsive" src="/img/ficha/<%= pet.id_familia.to_s %>/<%= pet.id.to_s %>.png"/> 
            </div>
          </div>


          <div class="col-sm-4 col-sm-offset-2 right">
            <br />
            <%= link_to "Detalhes", pet_path(pet), class: "btn btn-sq btn-primary" %>
            <br />
            <br />
            <%= link_to "Editar", edit_pet_path(pet), class: "btn btn-sq btn-primary" %>
            <br />
            <br />
            <%= link_to "Excluir", pet_path(pet), method: :delete, data: { confirm: "Deseja realmente excluir esse Pet?" },  class: "btn btn-sq btn-danger" %>
            <br />
          </div>

        </div>
      </div>
    <% end %> 
  </div>
      
</div>


<% content_for :scripts do %> 
  <script type="text/javascript" src="/js/pesquisa-pet.js"> </script>
<% end %>