<div class="row">
  <div class="col-xs-12">
     <h2> Detalhes do Pet </h2>
  </div>
</div>

<div class="col-xs-offset-1 col-xs-6 col-xs-offset-1">
      
  <div class="row well">
    <h2 align="center"><%= @pet.raca %></h2>
    <br />
    
    <img class="max-img" src="/img/ficha/<%= @pet.id_familia.to_s %>/<%= @pet.id.to_s %>.png" alt="" />
    <br />

    <div class="tabbable">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#<%= @pet.raca.gsub(/\s+/, '') + '1' %>" data-toggle="tab">Resumo</a></li>
        <li><a href="#<%= @pet.raca.gsub(/\s+/, '') + '2' %>" data-toggle="tab">Origem</a></li>
        <li><a href="#<%= @pet.raca.gsub(/\s+/, '') + '3' %>" data-toggle="tab">Caracteristicas</a></li>
        <li><a href="#<%= @pet.raca.gsub(/\s+/, '') + '4' %>" data-toggle="tab">Temperamento</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="<%= @pet.raca.gsub(/\s+/, '') + '1' %>">
          <%=raw @pet.resumo %>
        </div>
        <div class="tab-pane" id="<%= @pet.raca.gsub(/\s+/, '') + '2' %>">
          <p>
            <%= @pet.origem %>
          </p>
        </div>
        <div class="tab-pane" id="<%= @pet.raca.gsub(/\s+/, '') + '3' %>">
          <p>
            <%= @pet.caracteristicas %>
          </p>
        </div>
        <div class="tab-pane" id="<%= @pet.raca.gsub(/\s+/, '') + '4' %>">
          <p>
            <%= @pet.temperamento %>
          </p>
        </div>
      </div>
    </div>

   
  </div>

  <div class="actions">
    <%= link_to "Editar", edit_pet_path(@pet), class: "btn btn-primary" %> 
    <%= link_to "Excluir", pet_path(@pet), method: :delete, 
                                        data: { confirm: "Deseja realmente excluir esse Pet?" }, 
                                        class: "btn btn-danger" %>
    <br/ ><br/ >
    [ <%= link_to "Voltar para listagem de Pets", pets_path %> ]                                    
  </div>  
</div>



