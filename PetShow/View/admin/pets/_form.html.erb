<%= render 'shared/errors', obj: @pet %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@pet, :html => { class: "form-horizontal", role: "form" }) do |f| %>
     
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label 'Familia' %>  
        </div>
        <div class="col-sm-8 ">
          <%= f.collection_select(:id_familia, Familia.all, :id, :nome, {}, {:class=>'form-control'}) do |cb| %>
          <% end %>
        </div>
      </div>
    
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :raca %>  
        </div>
        <div class="col-sm-8">
          <%= f.text_field :raca, class: "form-control", placeholder: "Raça do pet", autofocus: true %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :resumo %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :resumo, rows: 10, class: "form-control", placeholder: "Resumo" %>
        </div>
      </div>  

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :origem %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :origem, rows: 10, class: "form-control", placeholder: "Origem" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :caracteristicas %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :caracteristicas, rows: 10, class: "form-control", placeholder: "Características" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :temperamento %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :temperamento, rows: 10, class: "form-control", placeholder: "Temperamento" %>
        </div>
      </div>  

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :foto %>  
        </div>
        <div class="col-sm-8">
          <%= f.file_field :foto, class: "form-control", placeholder: "Foto" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.submit(@pet.new_record? ? "Inserir" : "Atualizar", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
      
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancelar e retornar para a tela de listagem de Pets", pets_path %> ]   
    </div>
  </div>
</div>
